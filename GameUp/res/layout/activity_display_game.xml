<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DisplayGameActivity" >

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    xmlns:tools="http://schemas.android.com/tools"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal" >
	
	    <ImageView
	        android:id="@+id/gameSportIcon"
	        android:layout_width="50dp"
	        android:layout_height="50dp"
	        android:layout_margin="10dp"
	        android:background="@drawable/unknown_icon"
	        android:contentDescription="@string/access_sport_icon" />
	
	    <LinearLayout
	        xmlns:android="http://schemas.android.com/apk/res/android"
	        xmlns:tools="http://schemas.android.com/tools"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:orientation="vertical" >
	
	        <TextView
	            android:id="@+id/gameSport"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:textAppearance="?android:attr/textAppearanceLarge"
	            android:textSize="20sp"
	            android:text="Basketball" >
	        </TextView>
	
	        <TextView
	            android:id="@+id/gameLocation"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:textAppearance="?android:attr/textAppearanceLarge"
	            android:textSize="20sp"
	            android:text="742 Amherst St." >
	        </TextView>
    	</LinearLayout>
    	
	    <LinearLayout
	        xmlns:android="http://schemas.android.com/apk/res/android"
	        xmlns:tools="http://schemas.android.com/tools"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:orientation="vertical" >

		    <TextView
		        android:id="@+id/gameTimestamp"
		        android:layout_width="match_parent"
	            android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:textAppearance="?android:attr/textAppearanceLarge"
		        android:textSize="20sp"
		        android:text="8pm" >
		    </TextView>
		    
		    <TextView
		        android:id="@+id/gameDistance"
		        android:layout_width="match_parent"
	            android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:textAppearance="?android:attr/textAppearanceLarge"
		        android:textSize="20sp"
		        android:text="0.1 miles" >
		    </TextView>
		</LinearLayout>
	</LinearLayout>

	<ImageView
	    android:id="@+id/gameMap"
	    android:layout_width="fill_parent"
	    android:layout_height="0dp"
	    android:layout_weight="2"
	    android:layout_marginTop="10dp"
	    android:layout_marginBottom="10dp"
	    android:src="@drawable/google_map1" />
	
	<TextView
        android:id="@+id/gamePlayers"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="20sp"
        android:text="Players Joined" >
    </TextView>

	<Button
	    android:id="@+id/buttonJoin"
	    android:layout_width="fill_parent"
        android:layout_height="60dp"
	    android:text="@string/join" />

</LinearLayout>